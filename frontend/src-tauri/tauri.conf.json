{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "capybarka",
  "version": "0.1.0",
  "identifier": "com.capybarka.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Capybarka",
        "width": 640,
        "height": 380,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "dragDropEnabled": true,
        "titleBarStyle": "Overlay",
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
